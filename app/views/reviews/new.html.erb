<h1>New Review of <%= @restaurant.name %></h1>


<%= simple_form_for [@restaurant, @review] do |f| %>
  <div class="form-group m-5">
    <%= f.input :content, label: "Avaliação" %>
  </div>

  <div class="form-group m-5">
    <%= f.input :rating, label: "Nota do restaurante" %>
  </div>

  <%= f.button :submit, class: "btn-primary m-5" %>
  <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>
<% end %>

<%= link_to "Voltar", restaurants_path, class: 'btn btn-secondary m-5' %>
